<a href="/actors/new">Crear Actor</a>
<table>
	<tr>
		<th>Foto</th>
		<th>Nombre</th>
		<th>Bio</th>
		<th>Fecha de nacimiento</th>
		<th>Lugar de nacimiento</th>
		<th>Fecha de fallecimiento</th>
		<th>Lugar de fallecimiento</th>
	</tr>	
<% @actors.each do |actor| %>
	<tr>
		<td>
			<img src="<%= actor["image_url"] %>">
		</td>		
		<td>
			<%= actor["name"] %>
		</td>
		<td>
			<%= actor["bio"] %>
		</td>
		<td>
			<%= actor["birth_date"] %>
		</td>
		<td>
			<%= actor["birth_place"] %>
		</td>
		<td>
			<%= actor["death_date"] unless actor["alive"] %>
		</td>
		<td>
			<%= actor["death_place"] unless actor["alive"] %>
		</td>
	</tr>
<% end %>
</table>